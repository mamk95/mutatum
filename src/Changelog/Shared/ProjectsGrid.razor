<div class="projects-grid">
    @foreach (var project in projectsWithSortedReleases)
    {
        var release = project.Releases?.FirstOrDefault();

        <a class="project-wrapper" href="@($"project/{project.Id}")">
            <div class="project">
                <div class="d-flex justify-content-between align-items-start">
                    <h3 class="d-block text-truncate">@project.Name</h3>

                    @if (release != null)
                    {
                        <span class="last-release-date">@release.ReleaseDate</span>
                    }
                </div>

                <p class="d-block text-truncate">
                    @if (string.IsNullOrEmpty(project.Description))
                    {
                        <i>No description</i>
                    }
                    else
                    {
                        @project.Description
                    }
                </p>

                <hr />

                @if (release != null)
                {
                    <div class="d-block text-truncate">@release.VersionAndTitle</div>
                }
                else
                {
                    <div class="no-releases"><i>No available releases</i></div>
                }
            </div>
        </a>
    }
</div>
 
@code {
    [Parameter]
    public IList<Project> projectsWithSortedReleases { get; set; }
}
