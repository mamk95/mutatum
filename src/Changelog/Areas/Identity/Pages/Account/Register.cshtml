@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@if (@Model.BlockedByHighThreatLevel)
{
    <partial name="_HighProtectionErrorPartial" />
}
else
{
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-5">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h3>Create a new account</h3>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
        <div class="col-md-5 col-md-offset-2">
            <section>
                <h3>Account must be approved</h3>
                <hr />
                <div>
                    <p>
                        After registering your account, please contact an existing user/admin and ask them to confirm your account.
                    </p>
                </div>
            </section>
        </div>
    </div>
}

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
